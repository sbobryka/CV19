<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dec="clr-namespace:CV19.Models.Decanat">
    <ResourceDictionary x:Key="CompositeItemsControlDataTemplates">
        <DataTemplate DataType="{x:Type dec:Group}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=Name}"/>
                <TextBlock Text="{Binding Path=Description}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type dec:Student}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=Surname}"/>
                <TextBlock Text="{Binding Path=Name}"/>
                <TextBlock Text="{Binding Path=Patronymic}"/>
            </StackPanel>
        </DataTemplate>
    </ResourceDictionary>
</ResourceDictionary>